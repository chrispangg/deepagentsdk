{
  "$schema": "https://opencode.ai/config.json",
  "permission": "allow",
  "tui": {
    "scroll_speed": 1,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "mcp": {
    "shadcn": {
      "type": "local",
      "command": [
        "npx",
        "shadcn@latest",
        "mcp"
      ],
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  }
}